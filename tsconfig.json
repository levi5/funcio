{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "./lib",
    "allowJs": true,
    "rootDir": "./src",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}